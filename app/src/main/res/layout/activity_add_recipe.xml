<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecipe">

    <TextView
        android:id="@+id/textVie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Add details to make a post request"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textVie"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/ed_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        android:hint="Enter Author Name"
        app:layout_constraintTop_toBottomOf="@+id/ed_title"
         />

    <EditText
        android:id="@+id/ed_ingredents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        android:hint="Enter Ingredents"
        app:layout_constraintTop_toBottomOf="@+id/ed_author"
        />

    <EditText
        android:id="@+id/ed_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        android:hint="Enter Instruction"
        app:layout_constraintTop_toBottomOf="@+id/ed_ingredents"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="save receipes"
        app:layout_constraintTop_toBottomOf="@+id/ed_instruction"
        />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="view receipes"
        app:layout_constraintTop_toBottomOf="@+id/btn_save"
         />

</androidx.constraintlayout.widget.ConstraintLayout>